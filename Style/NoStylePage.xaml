<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="No Styles" Icon="xaml.png" x:Class="Style.NoStylePage">
	<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
	<StackLayout Padding="0,10,0,0">
		<Label Text="These labels" 
			HorizontalOptions="Center" 
			VerticalOptions="CenterAndExpand"
			FontSize="Large"/>
		<Label Text="are not"
				HorizontalOptions="Center"
				VerticalOptions="CenterAndExpand"
				FontSize="Large"/>
		<Label Text="using styles" 
				HorizontalOptions="Center"
				VerticalOptions="CenterAndExpand"
				FontSize="Large"/>
	</StackLayout>
</ContentPage>